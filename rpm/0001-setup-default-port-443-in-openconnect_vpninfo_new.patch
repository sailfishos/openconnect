--- a/library.c
+++ b/library.c
@@ -81,6 +81,7 @@ struct openconnect_info *openconnect_vpninfo_new(const char *useragent,
 	vpninfo->req_compr = COMPR_STATELESS;
 	vpninfo->max_qlen = 10;
 	vpninfo->localname = strdup("localhost");
